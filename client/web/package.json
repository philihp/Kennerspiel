{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "vite build",
    "lint": "eslint --ext=.ts,.tsx src/",
    "prepare": "cd ../.. && husky install client/web/.husky",
    "start": "vite",
    "test": "jest"
  },
  "dependencies": {
    "ramda": "^0.28.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.9.0",
    "react-toastify": "9.1.1"
  },
  "devDependencies": {
    "@philihp/eslint-config": "6.0.2",
    "@philihp/prettier-config": "1.0.0",
    "@tsconfig/vite-react": "^1.0.1",
    "@types/jest": "29.5.0",
    "@types/ramda": "^0.28.23",
    "@types/react": "18.0.29",
    "@types/react-dom": "18.0.11",
    "@types/react-router-dom": "5.3.3",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "@vitejs/plugin-react": "3.1.0",
    "autoprefixer": "10.4.14",
    "eslint": "8.36.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.0",
    "prettier": "2.8.7",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5",
    "vite": "4.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --ext .ts,.tsx --fix"
    ]
  },
  "prettier": "@philihp/prettier-config",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "@philihp"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "settings": {
      "import/extensions": [
        ".ts",
        ".tsx"
      ],
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {},
        "node": {
          "extensions": [
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ],
      "no-console": "off",
      "no-restricted-syntax": "off",
      "no-unused-vars": "off",
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*"
        ],
        "rules": {}
      }
    ]
  }
}
