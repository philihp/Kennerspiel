{
  "name": "lathora-server",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "hathora dev",
    "test": "jest"
  },
  "devDependencies": {
    "@philihp/eslint-config": "6.0.2",
    "@philihp/prettier-config": "1.0.0",
    "@types/jest": "29.2.3",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "eslint": "8.28.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "lint-staged": "13.0.4",
    "prettier": "2.8.0",
    "ts-jest": "29.0.3",
    "typescript": "4.5.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "dist/"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,ts,tsx}": [
      "eslint --ext .js,.jsx,.json,.ts,.tsx --fix"
    ]
  },
  "prettier": "@philihp/prettier-config",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:jest/all",
      "plugin:@typescript-eslint/recommended",
      "@philihp"
    ],
    "settings": {
      "import/extensions": [
        ".js",
        ".ts"
      ],
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts"
        ]
      },
      "import/resolver": {
        "typescript": {},
        "node": {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      }
    },
    "rules": {}
  }
}
